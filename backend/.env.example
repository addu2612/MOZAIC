# MOZAIC backend environment
# Copy to .env and fill values.

# Database (async SQLAlchemy URL)
DATABASE_URL=postgresql+asyncpg://mozaic:mozaic123@localhost:5432/mozaic

# JWT signing key (CHANGE ME)
SECRET_KEY=change_me_to_a_long_random_string

# Fernet encryption key (base64 urlsafe; generate via: python scripts/generate_keys.py)
ENCRYPTION_KEY=change_me_generate_with_scripts_generate_keys

# Auth
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis/Celery
REDIS_URL=redis://localhost:6379
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Optional: CORS (if supported by backend config)
# CORS_ORIGINS=http://localhost:5173
